@{
    ViewBag.Title = "Hospital Reports";
}

<h2>Hospital Management Reports</h2>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Staff Workload Report</h3>
            </div>
            <div class="panel-body">
                <p>View task distribution across staff members</p>
                <a href="@Url.Action("StaffWorkload")" class="btn btn-primary">View Report</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Department Performance</h3>
            </div>
            <div class="panel-body">
                <p>View performance metrics by department</p>
                <a href="@Url.Action("DepartmentPerformance")" class="btn btn-primary">View Report</a>
            </div>
        </div>
    </div>
</div>